<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f6f6f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8.5dp"
        android:layout_marginRight="8.5dp"
        android:layout_marginTop="8.8dp"
        android:background="@drawable/white_light_rect"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:src="@drawable/s9plus"
                android:contentDescription="@string/todo" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_medium"
                    android:id="@+id/cart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="@color/txt_color"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/cart_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.3sp"
                        android:layout_marginStart="1dp"
                        android:background="@drawable/offer_red_rect"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        tools:ignore="SmallSp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_count"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/size_red_rect">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:background="#f2f2f2">


                        <ImageView
                            android:id="@+id/minus"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:src="@drawable/ic_minus"
                            android:layout_gravity="center"
                            android:contentDescription="@string/todo" />

                    </FrameLayout>


                    <TextView
                        android:id="@+id/cart_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/one"
                        android:paddingLeft="8.7dp"
                        android:paddingRight="8.7dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/red"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="#f2f2f2">


                        <ImageView
                            android:id="@+id/plus"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_plus"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/todo" />

                    </FrameLayout>
                </LinearLayout>





            </LinearLayout>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/todo" />






        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_light_rect"
        android:layout_marginLeft="8.5dp"
        android:layout_marginRight="8.5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            android:layout_marginLeft="8.5dp"
            android:layout_marginRight="8.5dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textSize="12.7sp"
                android:textColor="#a2a2a2"
                android:fontFamily="@font/roboto_regular"/>


            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="12.7sp"
                android:fontFamily="@font/roboto_bold"
                />
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>



</RelativeLayout>
